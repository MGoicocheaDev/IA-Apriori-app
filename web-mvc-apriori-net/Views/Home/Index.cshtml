@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>IA - Apriori</h1>
    <p class="lead">Aplicación web de analisis de datos con el algoritmo Apriori.</p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("UploadFile", "Home", FormMethod.Post, new { enctype = "multipart/form-data", }))
        {
            <div class="form-group">
                @Html.TextBox("file", "", new { type = "file" }) <br />
                <input id="btnSubmit" type="submit" value="Cargar y Entrenar agente inteligente" class="btn btn-info" />

                @if (ViewBag.Message == "Fichero procesado con exito")
                {
                    <div class="alert alert-success" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        @ViewBag.Message
                    </div>
                }
                else if (ViewBag.Message == "Carga fallida")
                {
                    <div class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span>
                        @ViewBag.Message
                    </div>
                }
            </div>
        }

    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped- table-bordered table-hover table-checkable" id="kt_table_1">
            <thead>
                <tr>
                    <th>Combinación</th>
                    <th>Restante</th>
                    <th>Confianza</th>
                    <th>Lift</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="tbody">
            </tbody>
        </table>

    </div>
</div>
@section Scripts {
    @Scripts.Render("~/Scripts/App/CustomLoading")
    @Scripts.Render("~/Scripts/App/IAprocess")

}
